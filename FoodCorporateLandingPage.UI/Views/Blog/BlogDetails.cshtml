@model FoodCorporateLandingPage.Entity.Concrete.Blog
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@await Component.InvokeAsync("Header")
<!--::::: welcome area start :::::::-->
<div class="welcome-area" id="home">
    <div class="container-fluid">
        <div class="welcome-single inner primary-overlay" style="background-image:url(../../@Model.ImagePath);background-position: center;background-size: cover">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 m-auto text-center">
                        <div class="text-box">
                            <h1>@Model.Title</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--::::: welcome area end :::::::-->
<!--::::: blog grid area start:::::::-->
<div class="blog-single-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 m-auto">
                <div class="single_blog_text">
                  <p>@Html.Raw(Model.Content)</p>
                </div>
            </div>
        </div>
       
    </div>
</div>

@await Component.InvokeAsync("LatestBlogs")
@await Component.InvokeAsync("SubscribeArea")
@await Component.InvokeAsync("Footer")