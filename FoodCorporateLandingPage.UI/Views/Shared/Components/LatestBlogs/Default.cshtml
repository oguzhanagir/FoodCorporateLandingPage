@model IEnumerable<FoodCorporateLandingPage.Entity.Concrete.Blog>

 <!--::::: blog area start:::::::-->
<div class="single-blog-article-area padding10070">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="heading text-box white">
                    <h3>OUR LATEST <span>ARTICLE</span></h3>
                </div>
            </div>
        </div>
        <div class="space-60"></div>
        <div class="row">
            <div class="menu-carousel owl-carousel">
               @foreach (var blog in Model)
                {
                    <div class="single-menu">
                        <div class="single-menu-img he">
                            <a href="/Blog/BlogDetails/@blog.Id"><img src="~/@blog.ImagePath" alt=""> </a>
                        </div>
                        <div class="menu-text-box text-box">
                            <a href="/Blog/BlogDetails/@blog.Id">@blog.Title</a>
                            @if (@blog.Content!.Length > 300)
                            {
                                <p>@Html.Raw(@blog.Content.Substring(0, 300))</p>
                            }
                            else
                            {
                                <p> @Html.Raw(@blog.Content)</p>
                            }
                        </div>
                    </div>
                }
               
            </div>
        </div>
    </div>
</div>
<!--::::: blog area end :::::::-->